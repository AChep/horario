<resources>


    <!--
        Light
        -->
    <!-- Base application theme. -->
    <style name="AppThemeLight_Base" parent="Theme.AppCompat.Light">
        <!-- Api dependent changes go here -->
    </style>

    <style name="AppThemeLight" parent="AppThemeLight_Base">
        <!-- Customize theme here -->
        <item name="colorPrimary">@color/light_primary</item>
        <item name="colorPrimaryDark">@color/light_primary_dark</item>
        <item name="colorAccent">@color/light_accent</item>
        <item name="colorControlActivated">@color/light_activated</item>
        <!-- Icons -->
        <item name="icon_shield">@drawable/ic_shield_black_24dp</item>
        <item name="icon_lock_reset">@drawable/ic_lock_reset_black_24dp</item>
        <item name="icon_account_plus">@drawable/ic_account_plus_black_24dp</item>
        <item name="icon_information_outline">@drawable/ic_information_outline_black_24dp</item>
        <item name="icon_email">@drawable/ic_email_black_24dp</item>

        <!-- MaterialDrawer specific values -->
        <item name="material_drawer_background">@color/light_drawer_background</item>
        <item name="material_drawer_primary_text">@color/material_drawer_dark_primary_text</item>
        <item name="material_drawer_primary_icon">@color/material_drawer_dark_primary_icon</item>
        <item name="material_drawer_secondary_text">@color/material_drawer_dark_secondary_text</item>
        <item name="material_drawer_hint_text">@color/material_drawer_dark_hint_text</item>
        <item name="material_drawer_divider">@color/material_drawer_dark_divider</item>
        <item name="material_drawer_selected">@color/light_drawer_selection</item>
        <item name="material_drawer_selected_text">@color/material_drawer_dark_primary_text</item>
        <item name="material_drawer_header_selection_text">@color/material_drawer_dark_header_selection_text</item>
    </style>

    <style name="AppThemeLight.NoActionBar_Base" parent="AppThemeLight">
        <!-- Api dependent changes go here -->
    </style>

    <style name="AppThemeLight.NoActionBar" parent="AppThemeLight.NoActionBar_Base">
        <!-- Customize theme here -->
        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--
        Dark
        -->

    <!-- Base application theme. -->
    <style name="AppTheme_Base" parent="Theme.AppCompat">
        <!-- Api dependent changes go here -->
    </style>

    <style name="AppTheme" parent="AppTheme_Base">
        <!-- Customize theme here -->
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorPrimaryDark">@color/dark_primary_dark</item>
        <item name="colorAccent">@color/dark_accent</item>
        <item name="colorControlActivated">@color/dark_activated</item>
        <!-- Customize theme here -->
        <item name="icon_shield">@drawable/ic_shield_white_24dp</item>
        <item name="icon_lock_reset">@drawable/ic_lock_reset_white_24dp</item>
        <item name="icon_account_plus">@drawable/ic_account_plus_white_24dp</item>
        <item name="icon_information_outline">@drawable/ic_information_outline_white_24dp</item>
        <item name="icon_email">@drawable/ic_email_white_24dp</item>

        <!-- MaterialDrawer specific values -->
        <item name="material_drawer_background">@color/dark_drawer_background</item>
        <item name="material_drawer_primary_text">@color/material_drawer_dark_primary_text</item>
        <item name="material_drawer_primary_icon">@color/material_drawer_dark_primary_icon</item>
        <item name="material_drawer_secondary_text">@color/material_drawer_dark_secondary_text</item>
        <item name="material_drawer_hint_text">@color/material_drawer_dark_hint_text</item>
        <item name="material_drawer_divider">@color/material_drawer_dark_divider</item>
        <item name="material_drawer_selected">@color/dark_drawer_selection</item>
        <item name="material_drawer_selected_text">@color/material_drawer_dark_primary_text</item>
        <item name="material_drawer_header_selection_text">@color/material_drawer_dark_header_selection_text</item>
    </style>

    <style name="AppTheme.NoActionBar_Base" parent="AppTheme">
        <!-- Api dependent changes go here -->
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme.NoActionBar_Base">
        <!-- Customize theme here -->
        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--
        Black
        -->

    <style name="AppThemeBlack" parent="AppTheme">
        <!-- Customize theme here -->
        <item name="colorPrimary">@color/black_primary</item>
        <item name="colorPrimaryDark">@color/black_primary_dark</item>
        <item name="colorAccent">@color/dark_accent</item>
        <item name="colorControlActivated">@color/black_activated</item>
        <item name="android:windowBackground">@color/black_primary</item>
        <item name="android:colorBackground">@color/black_primary</item>
    </style>

    <style name="AppThemeBlack.NoActionBar_Base" parent="AppThemeBlack">
        <!-- Api dependent changes go here -->
    </style>

    <style name="AppThemeBlack.NoActionBar" parent="AppThemeBlack.NoActionBar_Base">
        <!-- Customize theme here -->
        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
